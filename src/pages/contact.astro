---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.vue";
import Footer from "../components/Footer.vue";
---

<Layout title="Welcome to Astro..">
  <Header client:visible />
  <div class="hero-text h-40 flex items-center justify-center bg-darkestblue">
    <h1 class="text-seasalt font-jakarta">
      <span class="text-gradient pt-6">Get in touch!</span>
    </h1>
  </div>
  <div
    class="spacer wave-white-to-blue flex w-100 flex-col justify-center items-center h-80"
  >
  </div>
  <div class="body">
    <div
      class="text-area text-xl flex m-auto text-left w-auto max-w-md flex-col justify-center items-center font-jakarta bg-seasalt"
    >
      <p class="m-2 text-left">
        <strong>email:</strong> alexdollard141@gmail.com
      </p>
      <p class="m-2 pb-2 text-left"><strong>phone:</strong> 770-542-9231</p>
    </div>
    <form
      method="POST"
      id="form"
      class="flex flex-col bg-transparent gap-1 max-w-md mx-auto px-8 rounded-md"
    >
      <input
        type="hidden"
        name="access_key"
        value={import.meta.env.FORM_ACCESS_KEY}
      />
      <label for="name" class="text-slate-100 pl-2">Name</label>
      <input
        type="text"
        name="name"
        required
        class="mb-2 mx-2 rounded-sm p-1"
      />

      <label for="email" class="text-slate-100 pl-2">Email</label>
      <input
        type="email"
        name="email"
        required
        class="mb-2 mx-2 rounded-sm p-1"
      />

      <label for="message" class="text-slate-100 pl-2">Message</label>
      <textarea name="message" required class="mb-2 mx-2 rounded-sm p-4"
      ></textarea>
      <button
        type="submit"
        class="text-slate-100 p-2 my-2 mx-auto w-1/3 rounded-md border border-slate-100 hover:scale-110"
        >Holler at me!</button
      >
      <div id="result" class="text-slate-100 pl-2"></div>
    </form>
  </div>
  <Footer class="footer" />
</Layout>

<script is:inline>
  const form = document.getElementById("form");
  const result = document.getElementById("result");

  form.addEventListener("submit", function (e) {
    const formData = new FormData(form);
    e.preventDefault();

    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result.innerHTML = "Please wait...";

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.innerHTML = json.message;
        } else {
          console.log(response);
          result.innerHTML = json.message;
        }
      })
      .catch((error) => {
        console.log(error);
        result.innerHTML = "Something went wrong!";
      })
      .then(function () {
        form.reset();
        setTimeout(() => {
          result.style.display = "none";
        }, 3000);
      });
  });
</script>

<style scoped>
  main {
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 4rem;
    font-weight: 600;
    line-height: 1;
    text-align: center;

    @media (max-width: 500px) {
      font-size: 3rem;
    }
  }

  .body {
    min-height: 45vh;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .blue-wave-divider .shape-fill {
    fill: #13151a;
  }

  .white-wave-divider {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    transform: rotate(180deg);
  }

  .white-wave-divider svg {
    position: relative;
    display: block;
    width: calc(267% + 1.3px);
    height: 194px;
    transform: rotateY(180deg);
  }

  .wave-white-to-blue {
    /* background: #f9f9f9; */
    background-image: url("../assets/layered-waves-haikei-4.svg");
  }

  .spacer {
    aspect-ratio: 900/300;
    width: 100%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }

  .white-wave-divider .shape-fill {
    fill: #f9f9f9;
  }

  .wave svg {
    position: relative;
    display: block;
    width: calc(149% + 1.3px);
    height: 194px;
  }

  .section {
    width: 100%;
    min-height: 350px;

    @media (max-width: 500px) {
      min-height: 400px;
    }
  }

  .white {
    background: #f9f9f9;
  }

  .dark-blue {
    background: #13151a;
  }

  span {
    display: inline-block;
    opacity: 0;
    filter: blur(4px);
  }

  span:nth-child(1) {
    animation: fade-in 0.8s 0.1s forwards cubic-bezier(0.11, 0, 0.5, 0);
  }

  span:nth-child(2) {
    animation: fade-in 0.8s 0.2s forwards cubic-bezier(0.11, 0, 0.5, 0);
  }

  @keyframes fade-in {
    100% {
      opacity: 1;
      filter: blur(0);
    }
  }

  .footer {
    position: fixed;
    bottom: 0px;
    left: 0px;

    @media (max-width: 500px) {
      position: relative;
    }
  }
</style>
