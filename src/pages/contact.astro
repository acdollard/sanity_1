---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.vue";
---

<Layout title="Welcome to Astro.">
  <Header client:visible />

  <form
    method="POST"
    id="form"
    class="flex flex-col bg-transparent gap-1 max-w-md m-auto px-3 rounded"
  >
    <input
      type="hidden"
      name="access_key"
      value={import.meta.env.FORM_ACCESS_KEY}
    />
    <label for="name" class="text-slate-100 pl-2">Name</label>
    <input type="text" name="name" required class="m-2 rounded p-1" />

    <label for="email" class="text-slate-100 pl-2">Email</label>
    <input type="email" name="email" required class="m-2 rounded p-1" />

    <label for="message" class="text-slate-100 pl-2">Message</label>
    <textarea name="message" required class="m-2 rounded p-1"></textarea>
    <button
      type="submit"
      class="text-slate-100 my-2 mx-auto w-1/3 rounded border border-slate-100 hover:scale-110"
      >Holler at me!</button
    >
    <div id="result" class="text-slate-100 pl-2"></div>
  </form>
</Layout>

<script is:inline>
  const form = document.getElementById("form");
  const result = document.getElementById("result");

  form.addEventListener("submit", function (e) {
    const formData = new FormData(form);
    e.preventDefault();

    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result.innerHTML = "Please wait...";

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.innerHTML = json.message;
        } else {
          console.log(response);
          result.innerHTML = json.message;
        }
      })
      .catch((error) => {
        console.log(error);
        result.innerHTML = "Something went wrong!";
      })
      .then(function () {
        form.reset();
        setTimeout(() => {
          result.style.display = "none";
        }, 3000);
      });
  });
</script>
