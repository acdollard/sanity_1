---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.vue";
import Footer from "../components/Footer.astro";
import Services from "../components/Services.astro";
import SingleQuoteAstro from "../components/SingleQuote.astro";
import PreviousClients from "../components/PreviousClients.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout title="Hillsboro Digital">
  <Header client:visible />
  <main class="w-100 relative">
    <div
      class="hero-text flex flex-col gap-6 items-center justify-center bg-darkestblue"
    >
      <h1 class="text-seasalt font-jakarta">
        Building
        <span class="text-gradient fade">lean, </span>
        <span class="text-gradient fade">beautiful </span> websites. <br />
      </h1>
      <h1 class="text-seasalt">Just for you.</h1>
      <div
        class="button-group flex flex-row mt-6 justify-center gap-6 bg-darkestblue"
      >
        <a href="/about">
          <span
            class="text-seasalt font-jakarta py-2 px-4 border border-gray-400 rounded-sm hover:bg-bluegreen"
            >Learn More</span
          >
        </a>
        <a href="/contact">
          <span
            class="text-seasalt py-2 px-4 border border-gray-400 rounded-sm hover:bg-bluegreen"
            >Get in Touch</span
          >
        </a>
      </div>
    </div>
    <div class="spacer wave-white-to-blue"></div>
    <div
      class="text-area text-2xl flex w-100 flex-col justify-center items-center font-jakarta bg-seasalt py-4"
    >
      <Services />
    </div>
    <div class="spacer wave-2"></div>
    <div
      class="text-area text-2xl flex w-100 flex-col justify-center items-center font-jakarta bg-darkestblue"
    >
      <SingleQuoteAstro />
    </div>
    <div class="spacer wave-white-to-blue"></div>
    <div
      class="text-area text-2xl flex w-100 flex-col justify-center items-center font-jakarta bg-seasalt py-4"
    >
      <PreviousClients />
    </div>
    <div class="spacer wave-2"></div>
    <div
      id="reach-out"
      class="flex flex-col md:flex-row lg:max-w-screen-lg lg:mx-auto justify-evenly pt-24"
    >
      <div
        class="text-area text-2xl flex flex-col justify-start items-center md:w-1/2 font-jakarta bg-seasalt py-4"
      >
        <p class="text-center text-lg md:text-2xl m-6">
          You have <strong>more important</strong> things to worry about than your
          website.
        </p>
        <p class="text-center text-lg md:text-2xl m-6">
          I'm here to build you <strong>exactly</strong> what you need.
        </p>

        <p class="text-center text-lg md:text-2xl m-6">
          Send me a message to get started!
        </p>
      </div>
      <div class="md:w-1/2">
        <ContactForm />
      </div>
    </div>
    <div class="spacer wave-2"></div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 3rem;
    font-weight: 600;
    line-height: 1;
    text-align: center;

    @media (max-width: 500px) {
      padding-left: 0.5em;
      padding-right: 0.5em;
    }
  }
  .hero-text {
    min-height: 40vh;

    @media (max-width: 500px) {
      min-height: 75vh;
    }
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .wave-white-to-blue {
    background-image: url("../assets/layered-waves-haikei-4.svg");
  }
  .wave-2 {
    background-image: url("../assets/layered-waves-5.svg");
  }

  .dark-blue {
    background: #13151a;
  }

  .fade {
    display: inline-block;
    opacity: 0;
    filter: blur(4px);
  }

  span:nth-child(1) {
    animation: fade-in 0.8s 0.1s forwards cubic-bezier(0.11, 0, 0.5, 0);
  }

  span:nth-child(2) {
    animation: fade-in 0.8s 0.4s forwards cubic-bezier(0.11, 0, 0.5, 0);
  }

  .spacer {
    aspect-ratio: 900/300;
    width: 100%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }

  @keyframes fade-in {
    100% {
      opacity: 1;
      filter: blur(0);
    }
  }
</style>
